---
import PostLayout from '@/layouts/PostLayout.astro';
import { getProcessedImageById, loadAnyPost } from '@/utils/astroHelpers';

export async function getStaticPaths() {
	return await loadAnyPost();
}

const post = Astro.props;
const { Content } = await post.render();

const image = await getProcessedImageById(post.data.thumbImage, 1500)
---

<PostLayout post={post} image={image?.src}>
	<Content />
</PostLayout>